<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Mox</title>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/knockout.min.js"></script>
  <script src="/js/main.js"></script>
</head>
<body>

  <table>
    <thead>
      <tr>
        <th>Playlist ID</th>
        <th>Name</th>
        <th>Save</th>
        <th>Delete</th>
        <th>Error</th>
      </tr>
    </thead>
    <tbody data-bind="foreach: playlists">
      <tr>
          <td data-bind="text: playlist_id"></td>
          <td><input data-bind="value: name, valueUpdate: 'afterkeydown'" /></td>
          <td><button data-bind="enable: dirty, click: save">save</button></td>
          <td><button data-bind="click: $root.removePlaylist">remove</button></td>
          <td data-bind="text: error, visible: error"></td>
      </tr>
    </tbody>
  </table>

  <input data-bind="value: newName, valueUpdate: 'afterkeydown'" placeholder="enter a name" /></td>
  <button data-bind="click: create, enable: newName().length >= 3">create</button>
  <span data-bind="text: newError, visible: newError"></span>

</body>
</html>

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Mox</title>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/knockout.min.js"></script>
  <script src="/js/main.js"></script>
</head>
<body>

  <table>
    <thead>
      <tr>
        <th>User ID</th>
        <th>Username</th>
        <th>Save</th>
        <th>Error</th>
      </tr>
    </thead>
    <tbody data-bind="foreach: users">
      <tr>
          <td data-bind="text: usr_id"></td>
          <td><input data-bind="value: username, event: { change: markDirty }" /></td>
          <td><button data-bind="enable: dirty, click: save">save</button></td>
          <td data-bind="text: error, visible: error"></td>
      </tr>
    </tbody>
  </table>

</body>
</html>
